<?xml version="1.0" encoding="utf-8"?>
<resources>
	<!-- 
    Define quais dispositivos USB o app reconhece automaticamente.
    Quando um destes dispositivos é conectado, o Android pergunta se 
    deseja abrir com este app.
    
    NOTA: vendor-id e product-id são em DECIMAL!
    Para converter de hex: 0x1A86 = 6790
    -->

	<!-- CH340/CH341 (muito comum em coletores brasileiros) -->
	<usb-device vendor-id="6790" product-id="29987" />
	<!-- 0x1A86, 0x7523 -->
	<usb-device vendor-id="6790" product-id="21795" />
	<!-- 0x1A86, 0x5523 -->

	<!-- FTDI FT232 (profissional) -->
	<usb-device vendor-id="1027" product-id="24577" />
	<!-- 0x0403, 0x6001 -->
	<usb-device vendor-id="1027" product-id="24596" />
	<!-- 0x0403, 0x6014 -->
	<usb-device vendor-id="1027" product-id="24597" />
	<!-- 0x0403, 0x6015 -->

	<!-- Silicon Labs CP210x -->
	<usb-device vendor-id="4292" product-id="60000" />
	<!-- 0x10C4, 0xEA60 -->
	<usb-device vendor-id="4292" product-id="60016" />
	<!-- 0x10C4, 0xEA70 -->
	<usb-device vendor-id="4292" product-id="60017" />
	<!-- 0x10C4, 0xEA71 -->

	<!-- Prolific PL2303 -->
	<usb-device vendor-id="1659" product-id="8963" />
	<!-- 0x067B, 0x2303 -->

	<!-- Arduino e similares (CDC-ACM) -->
	<usb-device vendor-id="9025" product-id="67" />
	<!-- 0x2341, 0x0043 Arduino Uno -->
	<usb-device vendor-id="9025" product-id="66" />
	<!-- 0x2341, 0x0042 Arduino Mega -->

</resources>
<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="AppColetor.Views.Controls.SyncStatusBar">

    <Frame BackgroundColor="{StaticResource BackgroundMedium}"
           Padding="12,8"
           CornerRadius="0"
           HasShadow="False">

        <Grid ColumnDefinitions="Auto,*,Auto,Auto">

            <!-- Indicador de Conectividade -->
            <HorizontalStackLayout Grid.Column="0" Spacing="6">
                <BoxView x:Name="IndicadorConexao"
                         WidthRequest="10"
                         HeightRequest="10"
                         CornerRadius="5"
                         Color="{StaticResource Danger}" />

                <Label x:Name="LblTipoConexao"
                       Text="Offline"
                       FontSize="12"
                       TextColor="{StaticResource TextSecondary}"
                       VerticalTextAlignment="Center" />
            </HorizontalStackLayout>

            <!-- Barra de Progresso (quando sincronizando) -->
            <ProgressBar x:Name="ProgressoSync"
                         Grid.Column="1"
                         Progress="0"
                         ProgressColor="{StaticResource Primary}"
                         Margin="12,0"
                         IsVisible="False"
                         VerticalOptions="Center" />

            <!-- Contador de Pendentes -->
            <Frame Grid.Column="2"
                   x:Name="FramePendentes"
                   BackgroundColor="{StaticResource Warning}"
                   Padding="8,4"
                   CornerRadius="12"
                   IsVisible="False">
                <HorizontalStackLayout Spacing="4">
                    <Label Text="⏳" FontSize="11" />
                    <Label x:Name="LblPendentes"
                           Text="0"
                           FontSize="11"
                           FontAttributes="Bold"
                           TextColor="White" />
                </HorizontalStackLayout>
            </Frame>

            <!-- Botão Sync Manual -->
            <ImageButton Grid.Column="3"
                         x:Name="BtnSync"
                         Source="sync_icon.png"
                         WidthRequest="32"
                         HeightRequest="32"
                         BackgroundColor="Transparent"
                         Margin="8,0,0,0"
                         Clicked="OnSyncClicked" />
        </Grid>
    </Frame>

</ContentView>
<?xml version = "1.0" encoding = "UTF-8" ?>
<Application xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:AppColetor"
             xmlns:converters="clr-namespace:AppColetor.Converters"
             x:Class="AppColetor.App">
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="Resources/Styles/Colors.xaml" />
                <ResourceDictionary Source="Resources/Styles/Styles.xaml" />
            </ResourceDictionary.MergedDictionaries>

            <!-- Converters globais -->
            <converters:BoolToColorConverter x:Key="BoolToColorConverter" />
            <converters:PendingToColorConverter x:Key="PendingToColorConverter" />
            <converters:SyncStatusConverter x:Key="SyncStatusConverter" />
            <converters:IntToBoolConverter x:Key="IntToBoolConverter" />
            <converters:ConnectButtonTextConverter x:Key="ConnectButtonTextConverter" />

        </ResourceDictionary>
    </Application.Resources>
</Application>